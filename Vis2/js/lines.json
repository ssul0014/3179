{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "view": {"stroke": "transparent"},
  "config": {
    "legend": {
      "labelFont": "roboto",
      "titleFont": "roboto",
      "labelFontSize": 12,
      "titleFontSize": 12
    },
    "axis": {
      "labelFont": "roboto",
      "titleFont": "roboto",
      "labelFontSize": 12,
      "titleFontSize": 12
    },
    "mark": {"font": "roboto"},
    "lineBreak": "lb"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ssul0014/3179/main/Vis2/Data/amb_exp_time.csv"
  },
  "layer": [
    {
      "transform": [
        {"calculate": "'$' + toString(datum.Per_person_total)", "as": "Spend"}
      ],
      "params": [
        {
          "name": "state_highlight",
          "select": {"type": "point", "fields": ["State"]},
          "bind": "legend"
        }
      ],
      "mark": {"type": "line", "point": true},
      "encoding": {
        "x": {"field": "Year"},
        "y": {
          "field": "Per_person_total",
          "type": "quantitative",
          "title": "Expenditure ($ per person)",
          "axis": {"grid": false}
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "scale": {
            "domain": ["ACT", "NSW", "NT", "QLD", "SA", "TAS", "VIC", "WA"],
            "range": [
              "#004949",
              "#ffb6db",
              "#490092",
              "#b6dbff",
              "#db6d00",
              "#920000",
              "#f0e442",
              "#0072b2"
            ]
          }
        },
        "opacity": {
          "condition": {"param": "state_highlight", "value": 1},
          "value": 0.1
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Year", "type": "ordinal"},
          {
            "field": "Spend",
            "type": "nominal",
            "title": "Expenditure ($ per person)"
          }
        ]
      }
    },
    {
      "transform": [
        {"filter": "datum.State == 'TAS'"},
        {
          "calculate": "'In the four years from 2017 Tasmania lb increased per person expenditure by 68%.'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "font": "roboto",
        "fontWeight": "lighter",
        "fontSize": 12,
        "dx": 120,
        "dy": -140
      },
      "encoding": {
        "text": {"field": "text_annotation"},
        "color": {"value": "grey"},
        "opacity": {
          "condition": {"param": "state_highlight", "value": 1},
          "value": 0
        }
      }
    }
  ]
}
