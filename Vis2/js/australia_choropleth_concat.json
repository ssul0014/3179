{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ssul0014/3179/main/Vis2/Data/ambulance_response.csv"
  },
    "config": {
    "legend": {
      "labelFont": "roboto",
      "titleFont": "roboto",
      "labelFontSize": 12,
      "titleFontSize": 12
    },
    "axis": {
      "labelFont": "roboto",
      "titleFont": "roboto",
      "labelFontSize": 12,
      "titleFontSize": 12
    },
    "mark": {"font": "roboto"}
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2018,
      "bind": {
        "input": "range",
        "min": 2012,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "vconcat": [
    {
      "width": "container",
      "height": 450,
      "view": {"stroke": "transparent"},
      "projection": {"type": "equirectangular"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/ssul0014/3179/main/Vis2/js/STE_2021_AUST_GDA2020.topojson",
            "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightgrey",
            "stroke": "white",
            "strokeOpacity": 1
          }
        },
        {
          "params": [
            {
              "name": "loc_select",
              "select": {"type": "point", "encodings": ["description"]}
            }
          ],
          "transform": [
            {
              "lookup": "State",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/ssul0014/3179/main/Vis2/js/STE_2021_AUST_GDA2020.topojson",
                  "format": {
                    "type": "topojson",
                    "feature": "STE_2021_AUST_GDA2020"
                  }
                },
                "key": "properties.STE_NAME21"
              },
              "as": "geo"
            },
            {"filter": "datum.Year == Year_selection"}
          ],
          "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "description": {"field": "State"},
            "fill": {
              "field": "Response_90",
              "type": "quantitative",
              "title": "Response Time (min)",
              "legend": {"orient": "top-left"},
              "scale": {"domain": [10, 35], "scheme": "lighttealblue"}
            },
            "tooltip": [
              {"field": "State"},
              {
                "field": "Response_90",
                "type": "quantitative",
                "title": "Response Time (min)"
              },
              {"field": "Year"}
            ]
          }
        }
      ]
    },
    {
      "width": "container",
      "height": 100,
      "view": {"stroke": "transparent"},
      "layer": [
        {
          "mark": "line",
          "transform": [{"filter": {"param": "loc_select"}}],
          "encoding": {
            "x": {"field": "Year", "type": "ordinal", "axis": {"grid": false}},
            "y": {
              "aggregate": "average",
              "field": "Response_90",
              "type": "quantitative",
              "title": "Response Time (min)",
              "scale": {"domain": [10, 35]},
              "axis": {"grid": false}
            },
            "color": {"value": "teal"}
          }
        },
        {
          "mark": {
            "type": "text",
            "font": "roboto",
            "fontWeight": "lighter",
            "fontSize": 14,
            "align": "right",
            "baseline": "bottom",
            "x": "width",
            "y": 0
          },
          "encoding": {
            "text": {
              "condition": {
                "test": "!isDefined(loc_select.State)",
                "value": "All States"
              },
              "value": {"expr": "loc_select.State"}
            }
          }
        }
      ]
    }
  ]
}
